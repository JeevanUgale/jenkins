pipeline {
    agent {
        label "master"
    }
    environment {
        SUDO_PROMPT = ''
        SUDO_ASKPASS = ''
    }
    tools {
        maven 'maven'
    }
    stages {
        
        stage('mvn test and build') { 
            steps {
                sh 'mvn clean package'
                stash includes: '**/*.war', name: 'mywar'
            }
        }
        stage('docker login,build,push') {
            agent {
                label "slave"
            }
            steps {
                unstash 'mywar'
                sh 'cp ./target/*.war .'
                sh 'mv ./*.war student.war'
                script {
                  withCredentials([usernamePassword(credentialsId: 'dockerhub-cred', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                    sh 'docker login -u $DOCKER_USERNAME -p $DOCKER_PASSWORD'
                    sh 'docker build -t jeevanugale/tomcat:${env.BUILD_NUMBER} .'
                    sh 'docker images'
                    sh 'docker run -d -p 8080:8080 --name tomcat jeevanugale/tomcat:2'
                    sh 'docker ps'
                    sh 'docker push jeevanugale/tomcat:2'
                  }
                }
            }
        }
    }
}
